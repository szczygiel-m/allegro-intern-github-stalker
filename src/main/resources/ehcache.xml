<config xmlns='http://www.ehcache.org/v3'
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.ehcache.org/v3
https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="longTermCaching">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap unit="entries">100</heap>
    </cache-template>

    <cache-template name="shortTermCaching">
        <expiry>
            <ttl unit="minutes">5</ttl>
        </expiry>
        <heap unit="entries">1000</heap>
    </cache-template>

    <cache alias="StargazersByUser" uses-template="longTermCaching"/>
    <cache alias="RepositoriesByUser" uses-template="shortTermCaching"/>

</config>